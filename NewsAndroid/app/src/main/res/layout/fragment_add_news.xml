<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_add_news">

    <EditText
        android:id="@+id/et_title_add"
        android:layout_width="315dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:hint="Title" />

    <EditText
        android:id="@+id/et_summary_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_title_add"
        android:layout_alignStart="@+id/et_title_add"
        android:layout_below="@+id/et_title_add"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:hint="Summary"
        android:inputType="textMultiLine" />
    <Button
        android:id="@+id/bt_send_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="74dp"
        android:text="Send"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/et_summary_add"
        android:layout_alignEnd="@+id/et_summary_add"
        android:background="@drawable/round_button_add"
        android:textColor="@color/cardview_light_background"/>

</RelativeLayout>